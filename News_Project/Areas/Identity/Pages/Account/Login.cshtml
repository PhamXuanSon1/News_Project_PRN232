@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="min-h-screen flex items-center justify-center" style="background: linear-gradient(135deg, #6a82fb 0%, #fc5c7d 100%);">
    <div class="w-full max-w-md bg-white rounded-2xl shadow-lg p-10 flex flex-col items-center">
        <h1 class="text-3xl font-bold mb-8">Login</h1>
        <form id="account" method="post" class="w-full space-y-6">
            <!-- Thêm nút Sign In phía trên -->
            <div>
                <label asp-for="Input.Email" class="block text-gray-700 font-semibold mb-1">Username</label>
                <div class="relative">
                    <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-400"><svg xmlns='http://www.w3.org/2000/svg' class='h-5 w-5' fill='none' viewBox='0 0 24 24' stroke='currentColor'><path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M5.121 17.804A13.937 13.937 0 0112 15c2.5 0 4.847.655 6.879 1.804M15 11a3 3 0 11-6 0 3 3 0 016 0z' /></svg></span>
                    <input asp-for="Input.Email" class="w-full border border-gray-300 rounded-lg px-10 py-3 text-lg focus:outline-none focus:ring-2 focus:ring-blue-500" autocomplete="username" aria-required="true" placeholder="Type your username" />
                </div>
                <span asp-validation-for="Input.Email" class="text-red-600 text-sm"></span>
            </div>
            <div>
                <label asp-for="Input.Password" class="block text-gray-700 font-semibold mb-1">Password</label>
                <div class="relative">
                    <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-400"><svg xmlns='http://www.w3.org/2000/svg' class='h-5 w-5' fill='none' viewBox='0 0 24 24' stroke='currentColor'><path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M12 11c0-1.657-1.343-3-3-3s-3 1.343-3 3m6 0c0 1.657 1.343 3 3 3s3-1.343 3-3m-6 0V7m0 4v4' /></svg></span>
                    <input asp-for="Input.Password" class="w-full border border-gray-300 rounded-lg px-10 py-3 text-lg focus:outline-none focus:ring-2 focus:ring-blue-500" autocomplete="current-password" aria-required="true" placeholder="Type your password" />
                </div>
                <span asp-validation-for="Input.Password" class="text-red-600 text-sm"></span>
            </div>
            <div class="flex justify-between items-center">
                <div></div>
                <!-- Đã xóa link Forgot password -->
            </div>
            <button type="submit" class="w-full py-3 rounded-lg text-white font-bold text-lg" style="background: linear-gradient(90deg, #6a82fb 0%, #fc5c7d 100%);">LOGIN</button>
        </form>
        <!-- Đã xóa phần đăng ký Sign Up -->
        <div class="mt-4 w-full text-center">
            <a href="/Identity/Account/Register" class="w-full inline-block py-3 rounded-lg text-white font-bold text-lg" style="background: linear-gradient(90deg, #6a82fb 0%, #fc5c7d 100%);">Register</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
