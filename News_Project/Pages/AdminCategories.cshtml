@page
@model News_Project.Pages.AdminCategoriesModel
@{
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Quản lý chuyên mục";
}

<h1 class="text-2xl font-bold mb-6 text-blue-700">Quản lý chuyên mục</h1>
<partial name="_AlertPartial" />

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="mb-4 text-green-600">@Model.Message</div>
}

<form method="post" class="mb-6 flex gap-2">
    <input name="name" class="border rounded px-3 py-2" placeholder="Tên chuyên mục" />
    <input name="description" class="border rounded px-3 py-2" placeholder="Mô tả" />
    <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded">Thêm</button>
</form>

@if (Model.Categories?.Any() == true)
{
    <table class="min-w-full bg-white rounded-lg shadow">
        <thead>
            <tr>
                <th class="px-4 py-2">ID</th>
                <th class="px-4 py-2">Tên</th>
                <th class="px-4 py-2">Mô tả</th>
                <th class="px-4 py-2">Ngày tạo</th>
                <th class="px-4 py-2">Thao tác</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var cat in Model.Categories)
        {
            <tr>
                <td class="border px-4 py-2">@cat.CategoryId</td>
                <td class="border px-4 py-2">@cat.Name</td>
                <td class="border px-4 py-2">@cat.Description</td>
                <td class="border px-4 py-2">@cat.CreatedAt.ToString("dd/MM/yyyy")</td>
                <td class="border px-4 py-2">
                    <form method="post" asp-page-handler="Delete" asp-route-categoryId="@cat.CategoryId" class="inline">
                        <button type="submit" class="text-red-600 text-xs hover:underline bg-transparent border-none">Xóa</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>Không có chuyên mục nào.</p>
} 