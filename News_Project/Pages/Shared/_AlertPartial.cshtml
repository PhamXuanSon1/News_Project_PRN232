@{
    var message = TempData["AlertMessage"] as string ?? Model?.Message;
    var error = TempData["AlertError"] as string;
}
@if (!string.IsNullOrEmpty(message))
{
    <div class="mb-4 px-4 py-2 bg-green-100 text-green-800 rounded">@message</div>
}
@if (!string.IsNullOrEmpty(error))
{
    <div class="mb-4 px-4 py-2 bg-red-100 text-red-800 rounded">@error</div>
} 